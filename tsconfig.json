{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/lobby/page.tsx",
    "src/app/maingame/comps/constructionPlanTab.tsx",
    "src/app/maingame/CustomSelect.tsx",
    "src/app/maingame/comps/playerInfo.jsx",
    "src/app/maingame/comps/hexagon.tsx",
    "src/app/maingame/comps/Timer.jsx"
  ],
  "exclude": ["node_modules"]
}
